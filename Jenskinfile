pipeline {
    agent any
    environment { CI = 'true' }
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/imanabdurrohman/ppmpl-prak8.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Run Unit Tests') {
            steps {
                sh 'npm test'
            }
        }
        stage('Build') {
            steps {
                echo 'Building the application...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
            }
        }
    }
    post {
        always {
            emailext(
                subject: 'Pipeline Status: ${currentBuild.currentResult}',
                body: "The pipeline has finished with status: ${currentBuild.currentResult}. Check Jenkins for details.",
                to: '2200016112@webmail.uad.ac.id',
                recipientProviders: []
            )
        }
    }
}
